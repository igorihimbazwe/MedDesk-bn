{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "commonjs",               
    "rootDir": "./src",                 
    "outDir": "./dist",                 
    "strict": true,                     
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*","src/types/express"],
  "exclude": ["node_modules", "dist"]
}
